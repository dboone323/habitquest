# Performance Configuration for Quantum Workspace Automation
# Phase 3: Performance & Build Optimization Settings

# Parallel Processing Configuration
MAX_PARALLEL_JOBS=3          # Maximum parallel jobs (recommended: 2-4 based on CPU cores)
PARALLEL_BATCH_SIZE=3        # Projects per batch (same as MAX_PARALLEL_JOBS)

# AI Operation Timeouts (seconds)
AI_TIMEOUT_QUICK=8           # Quick AI analysis (reduced from 10s)
AI_TIMEOUT_SUMMARY=12        # AI summary generation (reduced from 15s)
AI_TIMEOUT_INSIGHTS=15       # Workspace insights (reduced from 20s)

# Tool Timeouts (seconds)
SWIFTLINT_TIMEOUT=20         # SwiftLint analysis (reduced from 30s)
SWIFTFORMAT_TIMEOUT=30       # SwiftFormat processing
BUILD_TIMEOUT=60             # Build performance test timeout

# Caching Configuration
ENABLE_FILE_COUNT_CACHE=true # Cache file counts to avoid repeated filesystem operations
CACHE_EXPIRY_MINUTES=5       # Cache expiry time

# Build Optimization
ENABLE_INCREMENTAL_BUILDS=true   # Enable incremental build detection
ENABLE_BUILD_CACHING=true        # Enable build artifact caching
BUILD_CACHE_DIR=".build_cache"   # Build cache directory

# Performance Monitoring
ENABLE_PERFORMANCE_LOGGING=true  # Log performance metrics
PERFORMANCE_LOG_FILE="performance_metrics.log"
ENABLE_BUILD_PERFORMANCE_TESTS=true  # Run build performance tests

# Resource Management
MAX_MEMORY_USAGE_MB=2048     # Maximum memory usage (MB)
CPU_USAGE_LIMIT=80           # CPU usage limit percentage

# Quality Gates (Performance-focused)
MAX_BUILD_TIME_SECONDS=120   # Maximum build time before warning
MAX_LINT_TIME_SECONDS=30     # Maximum linting time before warning
MIN_COVERAGE_PERCENTAGE=70   # Minimum test coverage percentage

# AI Model Configuration
OLLAMA_MODEL="llama3.2:3b"   # Primary AI model for analysis
OLLAMA_MODEL_FALLBACK=""     # Fallback model if primary fails
ENABLE_AI_CACHING=true       # Cache AI responses for repeated queries

# Network Optimization
ENABLE_COMPRESSION=true      # Enable response compression
CONNECTION_TIMEOUT=10        # Network connection timeout
MAX_RETRIES=3                # Maximum retry attempts for network operations

# Development Workflow Optimization
ENABLE_FAST_MODE=false       # Skip non-essential operations in fast mode
FAST_MODE_SKIP_AI=false      # Skip AI operations in fast mode
FAST_MODE_SKIP_LINT=false    # Skip linting in fast mode
FAST_MODE_SKIP_FORMAT=false  # Skip formatting in fast mode